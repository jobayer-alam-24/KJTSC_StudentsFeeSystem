@model IEnumerable<StudentsFeeSystem.Models.Student>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["Total"] != null)

{
    decimal total = Convert.ToDecimal(TempData["Total"]);
    <h1>@total taka</h1>
}


<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="ResetFees">RESET</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roll)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FathersName)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roll)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @if (item.HasPaid)
                    {
                        <span>Paid</span>
                        <a asp-action = "Print" asp-route-id ="@item.Id" target="_blank"> Print Receipt </a> 
                    }
                    else
                    {
                        <a asp-action="MakePayment" asp-route-id="@item.Id">Make Payment</a>
                    }
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
