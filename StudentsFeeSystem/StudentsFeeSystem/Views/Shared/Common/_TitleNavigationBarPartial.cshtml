@model (string title, string url, string urlName, string currentPage)
<div class="row mb-5">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">@Model.title</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item link"><a href="@Model.url">@Model.urlName</a></li>
                    <li class="breadcrumb-item active">@Model.currentPage</li>
                </ol>
            </div>
        </div>
    </div>
</div>